<div style="max-width:420px; margin:50px auto; padding:26px; border:1px solid #e6e6e6; border-radius:8px; background:#fff;">
  <h2 style="text-align:center; margin-bottom:18px; color:#222;">Restablecer contraseña</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, local: true) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div style="margin-bottom:14px;">
      <%= f.label :password, "Nueva contraseña", style: "display:block; font-weight:600; margin-bottom:6px;" %>
      <% if @minimum_password_length %>
        <small>(mínimo <%= @minimum_password_length %> caracteres)</small>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", style: "width:100%; padding:10px; border:1px solid #ccc; border-radius:4px; margin-top:6px;" %>
    </div>

    <div style="margin-bottom:14px;">
      <%= f.label :password_confirmation, "Confirmar contraseña", style: "display:block; font-weight:600; margin-bottom:6px;" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width:100%; padding:10px; border:1px solid #ccc; border-radius:4px;" %>
    </div>

    <div>
      <%= f.submit "Cambiar contraseña", style: "width:100%; padding:12px; background:#007bff; color:#fff; border:none; border-radius:4px; font-weight:600;" %>
    </div>
  <% end %>

  <div style="text-align:center; margin-top:16px;">
    <%= render "devise/shared/links" %>
  </div>
</div>
