<div class="auth-container-small">
  <h2 class="auth-header-small">Restablecer contraseña</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, local: true) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "Nueva contraseña", class: "form-label-bold" %>
      <% if @minimum_password_length %>
        <small>(mínimo <%= @minimum_password_length %> caracteres)</small>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmar contraseña", class: "form-label-bold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div>
      <%= f.submit "Cambiar contraseña", class: "btn btn-primary py-2 px-4 w-full" %>
    </div>
  <% end %>

  <div class="auth-footer-simple">
    <%= render "devise/shared/links" %>
  </div>
</div>
