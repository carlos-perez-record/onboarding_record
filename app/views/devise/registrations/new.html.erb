<div class="max-w-md mx-auto">
  <div class="bg-white rounded-lg shadow-xl p-8">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-2">游꿀 Comienza ahora</h2>
    <p class="text-center text-gray-600 mb-6">Crea tu cuenta y accede a todas las funcionalidades</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, "Correo electr칩nico", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "Contrase침a", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <% if @minimum_password_length %>
          <small class="text-gray-500 text-xs">(m칤nimo <%= @minimum_password_length %> caracteres)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "Confirmar contrase침a", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Comienza ahora", class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-md transition text-lg", "aria-label": "Enviar formulario de creaci칩n de cuenta" %>
      </div>
    <% end %>

    <div class="text-center pt-4 border-t border-gray-200">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
