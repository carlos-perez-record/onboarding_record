<div class="max-w-3xl mx-auto my-10 px-5">
  <div class="card">
    <div class="text-center mb-8">
      <h2 class="heading-2 mb-2"> Iniciar Sesi贸n</h2>
      <p class="text-body mb-0">Accede a tu cuenta</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
      <% if resource.errors.any? %>
        <div id="error_explanation" class="bg-red-50 border border-red-200 p-4 mb-6 rounded">
          <h4 class="text-red-900 font-semibold mb-2 mt-0"><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h4>
          <ul class="list-disc list-inside space-y-1 text-red-700 my-3 pl-5">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-5" data-controller="validation" data-validation-type-value="email" data-validation-required-value="true">
        <%= f.label :email, "Correo Electr贸nico", class: "form-label" %>
        <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email", 
          class: "form-input",
          data: { validation_target: "field" } %>
        <div data-validation-target="error" class="hidden" role="alert"></div>
      </div>

      <div class="mb-5" data-controller="validation" data-validation-required-value="true" data-validation-min-length-value="6">
        <%= f.label :password, "Contrase帽a", class: "form-label" %>
        <%= f.password_field :password, 
          autocomplete: "current-password", 
          class: "form-input",
          data: { validation_target: "field" } %>
        <div data-validation-target="error" class="hidden" role="alert"></div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-6">
          <label class="inline-flex items-center">
            <%= f.check_box :remember_me, class: "mr-2 rounded" %>
            <span class="text-gray-700">Recu茅rdame</span>
          </label>
        </div>
      <% end %>

      <div class="mb-5">
        <%= f.submit "Iniciar Sesi贸n", class: "btn btn-primary w-full", "aria-label": "Enviar formulario de inicio de sesi贸n" %>
      </div>
    <% end %>

    <div class="text-center pt-4 border-t border-gray-200">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
