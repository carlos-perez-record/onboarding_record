<div class="auth-container">
  <h2 class="auth-header">Iniciar Sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
    <% if resource.errors.any? %>
      <div id="error_explanation" class="alert-danger">
        <h4 class="alert-title"><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h4>
        <ul class="alert-list">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, "Correo Electrónico", class: "form-label-bold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Contraseña", class: "form-label-bold" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recuérdame" %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.submit "Iniciar Sesión", class: "btn btn-primary btn-full", "aria-label": "Enviar formulario de inicio de sesión" %>
    </div>
  <% end %>

  <div class="auth-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
