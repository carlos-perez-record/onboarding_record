<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Registro de Incorporaci贸n" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Registro de Incorporaci贸n">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50" data-controller="feedback">
    <!-- Toast Notifications Container -->
    <div data-controller="toast">
      <div data-toast-target="container" class="toast-container"></div>
    </div>

    <!-- Modal Confirmation -->
    <div data-controller="modal" data-action="keydown@window->modal#handleKeydown">
      <div data-modal-target="backdrop"
           data-action="click->modal#closeOnBackdrop"
           class="modal-backdrop hidden">
        <div data-modal-target="dialog" class="modal-dialog" role="dialog" aria-modal="true" aria-labelledby="modal-title">
          <div class="modal-header">
            <h2 id="modal-title" data-modal-target="title" class="modal-title"></h2>
          </div>
          <div class="modal-body">
            <p data-modal-target="message" class="modal-message"></p>
          </div>
          <div class="modal-footer">
            <button type="button"
                    data-modal-target="cancelButton"
                    data-action="click->modal#cancel"
                    class="btn btn-secondary px-6 py-2">
              Cancelar
            </button>
            <button type="button"
                    data-modal-target="confirmButton"
                    data-action="click->modal#confirm"
                    class="btn btn-danger px-6 py-2">
              Confirmar
            </button>
          </div>
        </div>
      </div>
    </div>

    <nav class="navbar" aria-label="Navegaci贸n principal">
      <div class="max-w-full px-4 md:px-6">
        <div class="flex flex-wrap justify-between items-center py-3 gap-2">
        <%= link_to root_path, class: "flex items-center gap-3 no-underline", "aria-label": "Ir a la p谩gina de inicio" do %>
          <img src="/LOGO.png"
               alt="Logo Record"
               style="height: 39px; width: auto;"
               class="object-contain"
               loading="eager">
          <h1 class="text-base sm:text-lg md:text-xl font-bold m-0" style="color: #333;">
            Trabaja con Nosotros
          </h1>
        <% end %>          <div class="flex flex-wrap items-center gap-2 md:gap-3">
            <% if user_signed_in? %>
              <span class="font-semibold mr-2 text-sm md:text-base" style="color: #333;">Hola, <%= current_user.email %></span>
              <%= button_to "Cerrar sesi贸n", destroy_user_session_path, method: :delete, form: { style: "display:inline-block;" }, params: {}, class: "btn btn-danger", "aria-label": "Cerrar sesi贸n de usuario" %>
            <% else %>
              <%= link_to "Crear cuenta", new_user_registration_path, class: "btn btn-success", "aria-label": "Crear una nueva cuenta" %>
              <%= link_to "Iniciar sesi贸n", new_user_session_path, class: "btn btn-primary", "aria-label": "Iniciar sesi贸n en el sistema" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <div class="flex">
      <!-- Sidebar Menu (visible only when signed in and on md+ screens) -->
      <% if user_signed_in? %>
        <aside class="sidebar hidden md:block" role="navigation" aria-label="Men煤 lateral de navegaci贸n">
          <nav class="px-4" aria-label="Enlaces de navegaci贸n">
            <div class="mb-6">
              <p class="sidebar-title">Men煤</p>
              <ul class="list-none p-0 m-0 space-y-2">
                <li>
                  <%= link_to "Inicio", root_path, class: "sidebar-link", "aria-label": "Ir a la p谩gina de inicio" %>
                </li>
                <% if current_user.aspirante? %>
                  <li>
                    <% curriculum = current_user.curriculum %>
                    <% if curriculum&.persisted? %>
                      <%= link_to "Mi curr铆culum", curriculum_path(curriculum), class: "sidebar-link", "aria-label": "Ver mi curr铆culum" %>
                    <% else %>
                      <%= link_to "Crear mi curr铆culum", new_curriculum_path, class: "sidebar-link", "aria-label": "Crear mi curr铆culum profesional" %>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>

            <!-- Admin Menu -->
            <% if current_user.admin? %>
              <div class="mb-6 pt-6 border-t border-gray-300">
                <p class="sidebar-title">Administraci贸n</p>
                <ul class="list-none p-0 m-0 space-y-2">
                  <li>
                    <%= link_to "Gesti贸n de Usuarios", admin_users_path, class: "sidebar-link-admin", "aria-label": "Administrar usuarios del sistema" %>
                  </li>
                </ul>
              </div>
            <% end %>

            <!-- Recruiter Menu -->
            <% if current_user.reclutador? %>
              <div class="mb-6 pt-6 border-t border-gray-300">
                <p class="sidebar-title">Reclutamiento</p>
                <ul class="list-none p-0 m-0 space-y-2">
                  <li>
                    <%= link_to "Gesti贸n de Aspirantes", recruiter_aspirants_path, class: "sidebar-link-recruiter", "aria-label": "Administrar aspirantes registrados" %>
                  </li>
                  <li>
                    <%= link_to " Convocatorias", recruiter_job_postings_path, class: "sidebar-link-recruiter", "aria-label": "Gestionar convocatorias laborales" %>
                  </li>
                </ul>
              </div>
            <% end %>
          </nav>
        </aside>
      <% end %>

      <div class="flex-1 p-3 sm:p-6">
        <main id="main-content" role="main">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
