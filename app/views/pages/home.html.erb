<div class="home-hero">
  <h1>Bienvenido a Onboarding Record</h1>
  <p>Sistema de reclutamiento y onboarding de personal</p>

  <% if user_signed_in? %>
    <div class="welcome-box">
      <h2>¡Bienvenido, <%= current_user.email %>!</h2>
      <p>Tu sesión está activa y puedes comenzar a usar el sistema.</p>
    </div>
    
    <div class="options-section">
      <h3>Opciones disponibles:</h3>
      
      <% if current_user.aspirante? %>
        <!-- Enlaces a currículum movidos al menú lateral -->
      <% elsif current_user.reclutador? %>
        <div class="card card-center">
          <h4>Gestión de Aspirantes</h4>
          <p>Administra los aspirantes registrados en el sistema.</p>
          <%= link_to "Ir al panel de reclutamiento", recruiter_aspirants_path, class: "btn btn-primary" %>
        </div>
      <% elsif current_user.admin? %>
        <div class="card card-center">
          <h4>Gestión de Usuarios</h4>
          <p>Administra todas las cuentas de usuarios del sistema.</p>
          <%= link_to "Ir al panel de administración", admin_users_path, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card-grid">
      <div class="card">
        <h3>¿Eres nuevo?</h3>
        <p>Crea una cuenta para acceder a todas las funcionalidades.</p>
        <%= link_to "Crear cuenta", new_user_registration_path, class: "btn btn-success" %>
      </div>

      <div class="card">
        <h3>¿Ya tienes cuenta?</h3>
        <p>Inicia sesión con tu correo electrónico y contraseña.</p>
        <%= link_to "Iniciar sesión", new_user_session_path, class: "btn btn-primary" %>
      </div>
    </div>

    <div class="password-recovery">
      <h3>¿Olvidaste tu contraseña?</h3>
      <p>No te preocupes, puedes recuperarla fácilmente.</p>
      <%= link_to "Recuperar contraseña", new_user_password_path, class: "btn-link" %>
    </div>
  <% end %>
</div>
