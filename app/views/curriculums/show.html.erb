<div class="max-w-5xl mx-auto px-3 sm:px-6">
  <div class="card mb-4 sm:mb-6">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
      <h2 class="heading-2"> Mi Curr铆culum</h2>
      <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
        <%= link_to "锔 Editar", edit_curriculum_path(@curriculum), class: "btn btn-warning btn-sm sm:btn-md text-center", "aria-label": "Editar mi curr铆culum" %>
        <%= link_to "猬锔 Volver", root_path, class: "btn btn-secondary btn-sm sm:btn-md text-center", "aria-label": "Volver a la p谩gina de inicio" %>
      </div>
    </div>
  </div>

  <!-- Secci贸n: Datos Personales -->
  <div class="bg-white rounded-lg shadow-lg p-4 sm:p-6 mb-4 sm:mb-6">
    <h3 class="text-xl sm:text-2xl font-semibold text-gray-800 mb-4 sm:mb-6 border-b pb-3">Datos Personales</h3>

    <!-- Foto y Nombres -->
    <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 mb-4 sm:mb-6">
      <% if @curriculum.photo.attached? %>
        <div class="flex-shrink-0 mx-auto sm:mx-0">
          <img src="<%= url_for(@curriculum.photo) %>" alt="Foto de perfil" class="w-32 h-32 rounded-lg object-cover border-2 border-gray-300">
        </div>
      <% end %>
      <div class="flex-1">
        <p class="mb-4">
          <strong class="text-gray-700">Nombre Completo:</strong><br>
          <span class="text-gray-900 text-lg"><%= "#{@curriculum.first_name} #{@curriculum.last_name}" %></span>
        </p>
        <p class="mb-4">
          <strong class="text-gray-700">Identificaci贸n:</strong><br>
          <span class="text-gray-900"><%= @curriculum.identification %></span>
        </p>
        <p class="mb-0">
          <strong class="text-gray-700">Tel茅fono:</strong><br>
          <span class="text-gray-900"><%= @curriculum.phone_number %></span>
        </p>
      </div>
    </div>

    <hr class="my-6 border-gray-300">

    <!-- Informaci贸n Personal -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <p class="mb-4">
          <span class="block text-sm font-medium text-gray-500 mb-1">Fecha de Nacimiento</span>
          <span class="text-gray-900"><%= I18n.l(@curriculum.birth_date, format: :long) %> (<%= @curriculum.age %> a帽os)</span>
        </p>

        <p class="mb-4">
          <span class="block text-sm font-medium text-gray-500 mb-1">Ciudad</span>
          <span class="text-gray-900"><%= @curriculum.city %></span>
        </p>

        <p class="mb-0">
          <span class="block text-sm font-medium text-gray-500 mb-1">Disponibilidad para Viajar</span>
          <span class="inline-block px-3 py-1 rounded-full text-sm font-medium <%= @curriculum.available_to_travel? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @curriculum.available_to_travel? ? 'S铆' : 'No' %>
          </span>
        </p>
      </div>

      <div>
        <p class="mb-4">
          <span class="block text-sm font-medium text-gray-500 mb-1">Direcci贸n</span>
          <span class="text-gray-900"><%= @curriculum.address %></span>
        </p>

        <p class="mb-4">
          <span class="block text-sm font-medium text-gray-500 mb-1">Departamento</span>
          <span class="text-gray-900"><%= @curriculum.department %>, <%= @curriculum.country %></span>
        </p>

        <p class="mb-0">
          <span class="block text-sm font-medium text-gray-500 mb-1">Disponibilidad para Cambio de Residencia</span>
          <span class="inline-block px-3 py-1 rounded-full text-sm font-medium <%= @curriculum.available_to_relocate? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @curriculum.available_to_relocate? ? 'S铆' : 'No' %>
          </span>
        </p>
      </div>
    </div>
  </div>

  <!-- Secci贸n: Perfil Profesional -->
  <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
    <h3 class="text-2xl font-semibold text-gray-800 mb-4 border-b pb-3">Perfil Profesional</h3>
    <p class="text-gray-700 leading-relaxed">
      <%= @curriculum.profile_description.presence || "No hay descripci贸n" %>
    </p>
  </div>

  <!-- Secci贸n: Idiomas -->
  <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
    <h3 class="text-2xl font-semibold text-gray-800 mb-4 border-b pb-3">Idiomas</h3>
    <div class="flex flex-wrap gap-2">
      <% if @curriculum.languages.present? && @curriculum.languages.any? %>
        <% @curriculum.languages.each do |lang| %>
          <span class="inline-block bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-medium">
            <%= lang %>
          </span>
        <% end %>
      <% else %>
        <p class="text-gray-500 italic">No hay idiomas registrados</p>
      <% end %>
    </div>
  </div>

  <!-- Secci贸n: Informaci贸n Acad茅mica -->
  <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
    <h3 class="text-2xl font-semibold text-gray-800 mb-6 border-b pb-3">Informaci贸n Acad茅mica</h3>
    
    <% if @curriculum.education_level.present? %>
      <p class="mb-6 bg-gray-50 p-4 rounded-lg">
        <strong class="text-gray-700">Nivel de Estudios:</strong> 
        <span class="text-gray-900 capitalize"><%= @curriculum.education_level.capitalize %></span>
      </p>
    <% end %>
    
    <% if @curriculum.studies.any? %>
      <div class="space-y-4">
        <% @curriculum.studies.order(created_at: :desc).each do |study| %>
          <div class="border border-gray-300 rounded-lg p-5 bg-gray-50">
            <% if study.title.present? %>
              <h4 class="text-lg font-bold text-gray-900 mb-2">
                <%= study.title %>
              </h4>
            <% end %>
            
            <p class="text-gray-600 mb-2">
              <%= study.institution %>
            </p>
            
            <% if study.start_date.present? || study.end_date.present? %>
              <p class="text-gray-500 text-sm mb-3">
                <%= study.start_date&.strftime('%m/%Y') || '?' %> - <%= study.end_date&.strftime('%m/%Y') || 'Actualidad' %>
              </p>
            <% end %>
            
            <% if study.status.present? %>
              <span class="inline-block px-3 py-1 rounded-full text-sm font-medium <%= case study.status
                    when 'cursando' then 'bg-green-100 text-green-800'
                    when 'pausado' then 'bg-yellow-100 text-yellow-800'
                    when 'finalizado' then 'bg-gray-100 text-gray-800'
                    end %>">
                <%= study.status.capitalize %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 italic text-center py-4">No hay estudios registrados</p>
    <% end %>
  </div>

  <!-- Informaci贸n Meta -->
  <div class="bg-gray-50 rounded-lg shadow p-4 text-sm text-gray-600">
    <p class="mb-0">
      <strong class="text-gray-700">Creado:</strong> <%= I18n.l(@curriculum.created_at, format: :long) %><br>
      <strong class="text-gray-700">Actualizado:</strong> <%= I18n.l(@curriculum.updated_at, format: :long) %>
    </p>
  </div>
</div>
