<div style="max-width: 800px; margin: 30px auto; padding: 30px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
    <h2 style="margin: 0; color: #333;">Mi Currículum</h2>
    <div style="display: flex; gap: 10px;">
      <%= link_to "Editar", edit_curriculum_path(@curriculum), style: "padding: 8px 12px; background-color: #ffc107; color: #333; text-decoration: none; border-radius: 4px; font-weight: 600;" %>
      <%= link_to "Volver", root_path, style: "padding: 8px 12px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 4px; font-weight: 600;" %>
    </div>
  </div>

  <!-- Sección: Datos Personales -->
  <div style="border: 1px solid #ddd; border-radius: 8px; padding: 20px; margin-bottom: 20px; background: white;">
    <h3 style="margin-top: 0; margin-bottom: 20px; color: #333; border-bottom: 2px solid #007bff; padding-bottom: 10px;">Datos Personales</h3>

    <!-- Foto y Nombres -->
    <div style="display: flex; gap: 20px; margin-bottom: 20px;">
      <% if @curriculum.photo.attached? %>
        <div>
          <img src="<%= url_for(@curriculum.photo) %>" alt="Foto de perfil" style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover; border: 2px solid #ddd;">
        </div>
      <% end %>
      <div>
        <p style="margin: 0 0 10px 0;">
          <strong>Nombre Completo:</strong><br>
          <%= "#{@curriculum.first_name} #{@curriculum.last_name}" %>
        </p>
        <p style="margin: 0 0 10px 0;">
          <strong>Identificación:</strong><br>
          <%= @curriculum.identification %>
        </p>
        <p style="margin: 0;">
          <strong>Teléfono:</strong><br>
          <%= @curriculum.phone_number %>
        </p>
      </div>
    </div>

    <hr style="border: none; border-top: 1px solid #ddd; margin: 20px 0;">

    <!-- Información Personal -->
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
      <div>
        <p style="margin: 0 0 10px 0; color: #666; font-size: 12px; text-transform: uppercase; font-weight: 600;">Fecha de Nacimiento</p>
        <p style="margin: 0 0 20px 0;"><%= I18n.l(@curriculum.birth_date, format: :long) %> (<%= @curriculum.age %> años)</p>

        <p style="margin: 0 0 10px 0; color: #666; font-size: 12px; text-transform: uppercase; font-weight: 600;">Ciudad</p>
        <p style="margin: 0 0 20px 0;"><%= @curriculum.city %></p>

        <p style="margin: 0 0 10px 0; color: #666; font-size: 12px; text-transform: uppercase; font-weight: 600;">Disponibilidad para Viajar</p>
        <p style="margin: 0 0 20px 0;">
          <span style="display: inline-block; padding: 4px 12px; border-radius: 20px; <%= @curriculum.available_to_travel? ? 'background-color: #d4edda; color: #155724;' : 'background-color: #f8d7da; color: #721c24;' %>">
            <%= @curriculum.available_to_travel? ? 'Sí' : 'No' %>
          </span>
        </p>
      </div>

      <div>
        <p style="margin: 0 0 10px 0; color: #666; font-size: 12px; text-transform: uppercase; font-weight: 600;">Dirección</p>
        <p style="margin: 0 0 20px 0;"><%= @curriculum.address %></p>

        <p style="margin: 0 0 10px 0; color: #666; font-size: 12px; text-transform: uppercase; font-weight: 600;">Departamento</p>
        <p style="margin: 0 0 20px 0;"><%= @curriculum.department %>, <%= @curriculum.country %></p>

        <p style="margin: 0 0 10px 0; color: #666; font-size: 12px; text-transform: uppercase; font-weight: 600;">Disponibilidad para Cambio de Residencia</p>
        <p style="margin: 0;">
          <span style="display: inline-block; padding: 4px 12px; border-radius: 20px; <%= @curriculum.available_to_relocate? ? 'background-color: #d4edda; color: #155724;' : 'background-color: #f8d7da; color: #721c24;' %>">
            <%= @curriculum.available_to_relocate? ? 'Sí' : 'No' %>
          </span>
        </p>
      </div>
    </div>
  </div>

  <!-- Sección: Perfil Profesional -->
  <div style="border: 1px solid #ddd; border-radius: 8px; padding: 20px; margin-bottom: 20px; background: white;">
    <h3 style="margin-top: 0; margin-bottom: 15px; color: #333; border-bottom: 2px solid #007bff; padding-bottom: 10px;">Perfil Profesional</h3>
    <p style="margin: 0; line-height: 1.6; white-space: pre-wrap;">
      <%= @curriculum.profile_description.presence || "No hay descripción" %>
    </p>
  </div>

  <!-- Sección: Idiomas -->
  <div style="border: 1px solid #ddd; border-radius: 8px; padding: 20px; background: white;">
    <h3 style="margin-top: 0; margin-bottom: 15px; color: #333; border-bottom: 2px solid #007bff; padding-bottom: 10px;">Idiomas</h3>
    <div style="display: flex; flex-wrap: wrap; gap: 8px;">
      <% @curriculum.languages.present? && @curriculum.languages.any? ? @curriculum.languages.each do |lang| %>
        <span style="background-color: #007bff; color: white; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 500;">
          <%= lang %>
        </span>
      <% end : (render 'shared/empty_state', message: 'No hay idiomas registrados') %>
    </div>
  </div>

  <!-- Información Meta -->
  <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid #ddd; color: #666; font-size: 12px;">
    <p style="margin: 0;">
      <strong>Creado:</strong> <%= I18n.l(@curriculum.created_at, format: :long) %><br>
      <strong>Actualizado:</strong> <%= I18n.l(@curriculum.updated_at, format: :long) %>
    </p>
  </div>
</div>
