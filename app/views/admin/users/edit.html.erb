<div class="recruiter-container-narrow">
  <h2 class="recruiter-header">Editar cuenta</h2>

  <%= form_with(model: [@user], local: true, url: admin_user_path(@user), method: :patch) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="alert-danger">
        <h4 class="alert-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
        <ul class="alert-list">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :email, "Correo Electrónico", style: "display: block; margin-bottom: 8px; font-weight: bold; color: #333;" %>
      <%= form.email_field :email, 
        style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px; box-sizing: border-box;" %>
    </div>

    <div class="form-group">
      <%= form.label :password, "Nueva contraseña (dejar vacío para no cambiar)", style: "display: block; margin-bottom: 8px; font-weight: bold; color: #333;" %>
      <%= form.password_field :password, autocomplete: "new-password", 
        style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px; box-sizing: border-box;" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "Confirmar contraseña", style: "display: block; margin-bottom: 8px; font-weight: bold; color: #333;" %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", 
        style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px; box-sizing: border-box;" %>
    </div>

    <div class="form-group">
      <%= form.label :role, "Rol", style: "display: block; margin-bottom: 8px; font-weight: bold; color: #333;" %>
      <%= form.select :role, { "Admin" => "admin", "Aspirante" => "aspirante", "Reclutador" => "reclutador" }, {}, 
        style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px; box-sizing: border-box;" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Actualizar cuenta", 
        style: "flex: 1; padding: 12px; background-color: #28a745; color: white; border: none; border-radius: 4px; font-size: 16px; font-weight: bold; cursor: pointer;" %>
      <%= link_to "Cancelar", admin_users_path, 
        style: "flex: 1; padding: 12px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 4px; font-size: 16px; font-weight: bold; text-align: center;" %>
    </div>
  <% end %>
</div>
