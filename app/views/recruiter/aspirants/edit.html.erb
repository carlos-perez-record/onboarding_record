<div class="recruiter-container-narrow">
  <h2 class="recruiter-header">Editar cuenta</h2>

  <div>
    <% if @aspirant.errors.any? %>
      <div class="alert-danger">
        <h3 class="alert-title">Errores encontrados:</h3>
        <ul class="alert-list">
          <% @aspirant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <%= form_with(model: @aspirant, local: true, url: recruiter_aspirant_path(@aspirant), method: :patch) do |form| %>
    <div class="form-group">
      <%= form.label :email, "Correo electrónico", class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password, "Nueva contraseña (dejar vacío para no cambiar)", class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "Confirmación de contraseña", class: "form-label" %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Actualizar cuenta", class: "btn btn-success py-2 px-4" %>
      <%= link_to "Cancelar", recruiter_aspirants_path, class: "btn btn-secondary py-2 px-4" %>
    </div>
  <% end %>
</div>
