<div style="max-width: 600px; margin: 30px auto; padding: 30px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9;">
  <h2 style="text-align: center; margin-bottom: 30px; color: #333;">Editar cuenta</h2>

  <div style="margin-bottom: 20px;">
    <% if @aspirant.errors.any? %>
      <div style="padding: 10px; background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; border-radius: 4px; margin-bottom: 20px;">
        <h3 style="margin-top: 0;">Errores encontrados:</h3>
        <ul style="margin: 10px 0; padding-left: 20px;">
          <% @aspirant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <%= form_with(model: @aspirant, local: true, url: recruiter_aspirant_path(@aspirant), method: :patch) do |form| %>
    <div style="margin-bottom: 15px;">
      <%= form.label :email, "Correo electrónico", style: "display: block; margin-bottom: 5px; font-weight: 500; color: #333;" %>
      <%= form.email_field :email, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px; box-sizing: border-box;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :password, "Nueva contraseña (dejar vacío para no cambiar)", style: "display: block; margin-bottom: 5px; font-weight: 500; color: #333;" %>
      <%= form.password_field :password, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px; box-sizing: border-box;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= form.label :password_confirmation, "Confirmación de contraseña", style: "display: block; margin-bottom: 5px; font-weight: 500; color: #333;" %>
      <%= form.password_field :password_confirmation, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px; box-sizing: border-box;" %>
    </div>

    <div style="display: flex; gap: 10px;">
      <%= form.submit "Actualizar cuenta", 
        style: "flex: 1; padding: 10px; background-color: #28a745; color: white; border: none; border-radius: 4px; font-weight: 700; cursor: pointer;" %>
      <%= link_to "Cancelar", recruiter_aspirants_path, 
        style: "flex: 1; padding: 10px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 4px; font-weight: 700; text-align: center;" %>
    </div>
  <% end %>
</div>
