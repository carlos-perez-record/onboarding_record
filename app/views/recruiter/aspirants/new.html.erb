<div class="recruiter-container-small">
	<h2 class="recruiter-header">Crear nuevo aspirante</h2>

	<div>
		<% if @aspirant.errors.any? %>
			<div class="alert-danger">
				<h3 class="alert-title">Errores encontrados:</h3>
				<ul class="alert-list">
					<% @aspirant.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
	</div>

	<%= form_with(model: @aspirant, local: true, url: recruiter_aspirants_path) do |form| %>
		<div class="form-group">
			<%= form.label :email, "Correo electr칩nico", class: "form-label" %>
			<%= form.email_field :email, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= form.label :password, "Contrase침a", class: "form-label" %>
			<%= form.password_field :password, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= form.label :password_confirmation, "Confirmaci칩n de contrase침a", class: "form-label" %>
			<%= form.password_field :password_confirmation, class: "form-control" %>
		</div>

		<div class="form-actions">
			<%= form.submit "Crear aspirante", class: "btn btn-success" %>
			<%= link_to "Cancelar", recruiter_aspirants_path, class: "btn btn-secondary" %>
		</div>
	<% end %>

	<div class="link-center">
		<%= link_to "Volver a aspirantes", recruiter_aspirants_path, class: "link" %>
	</div>
</div>
