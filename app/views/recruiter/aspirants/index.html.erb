<div class="max-w-7xl mx-auto px-3 sm:px-6">
  <div class="bg-white rounded-lg shadow-lg p-4 sm:p-6 mb-4 sm:mb-6">
    <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-4 sm:mb-6">ðŸ‘¥ Panel de Reclutador - GestiÃ³n de Aspirantes</h2>

    <div class="mb-4 sm:mb-6">
      <%= link_to "âž• Crear nuevo aspirante", new_recruiter_aspirant_path, class: "inline-block bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-2 sm:px-6 sm:py-3 rounded-md transition text-base sm:text-lg w-full sm:w-auto text-center", "aria-label": "Crear un nuevo aspirante en el sistema" %>
    </div>

    <% if @aspirants.any? %>
      <div class="overflow-x-auto -mx-4 sm:mx-0">
        <div class="inline-block min-w-full align-middle">
          <div class="overflow-hidden">
            <table class="min-w-full bg-white border border-gray-300 rounded-lg">
              <thead class="bg-gray-100">
                <tr>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Email</th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider hidden sm:table-cell">ID</th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider hidden md:table-cell">Creado</th>
                  <th class="px-3 sm:px-6 py-3 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">Acciones</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% @aspirants.each do |aspirant| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-3 sm:px-6 py-4 text-sm text-gray-900 break-all"><%= aspirant.email %></td>
                    <td class="px-3 sm:px-6 py-4 text-sm text-gray-600 hidden sm:table-cell"><%= aspirant.id %></td>
                    <td class="px-3 sm:px-6 py-4 text-sm text-gray-600 hidden md:table-cell"><%= aspirant.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                    <td class="px-3 sm:px-6 py-4 text-center">
                      <div class="flex flex-col sm:flex-row justify-center gap-1 sm:gap-2">
                        <%= link_to "Editar", edit_recruiter_aspirant_path(aspirant), class: "bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded text-xs sm:text-sm font-medium", "aria-label": "Editar aspirante #{aspirant.email}" %>
                        <%= link_to "Eliminar", recruiter_aspirant_path(aspirant), method: :delete, data: { confirm: "Â¿EstÃ¡ seguro?" }, class: "bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-xs sm:text-sm font-medium", "aria-label": "Eliminar aspirante #{aspirant.email}" %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% else %>
      <p class="text-center text-gray-500 italic py-8">No hay aspirantes registrados en el sistema.</p>
    <% end %>
  </div>
</div>
